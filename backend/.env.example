# Database Configuration
DATABASE_URL=postgresql://draft_killer:draft_killer_dev_password@localhost:5432/draft_killer
# For async operations
DATABASE_URL_ASYNC=postgresql+asyncpg://draft_killer:draft_killer_dev_password@localhost:5432/draft_killer

# Security (IMPORTANT: Change this!)
# Generate with: openssl rand -hex 32
SECRET_KEY=your-very-secure-secret-key-here-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Weights & Biases Weave
# Get your API key from: https://wandb.ai/authorize
WANDB_API_KEY=your-wandb-api-key-here
WEAVE_PROJECT=draft-killer

# Application Settings
ENVIRONMENT=development
DEBUG=True
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
AUTH_RATE_LIMIT_PER_MINUTE=10

# Logging
LOG_LEVEL=INFO
